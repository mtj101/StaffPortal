@model StaffPortal.Models.ViewModels.EditSettingsViewModel
@{
    ViewBag.Title = "Edit Application Settings";
}

<div class="box box-primary">
   <div class="box-header with-border">
      <h4 class="box-title">Edit Application Settings</h4>
   </div>
   <div class="box-body">
      <form action="@Url.Action("EditSettings")" method="post" class="form-horizontal">
         @Html.AntiForgeryToken()
         @foreach (var setting in Model.Settings)
         {
            <div class="form-group">
               @Html.LabelFor(m => m.Settings[setting.Key], setting.Key, new { @class = "control-label col-md-3" })
               <div class="col-md-9">
                  @Html.EditorFor(m => m.Settings[setting.Key], new { htmlAttributes = new { @class = "form-control" } })
               </div>
            </div>
         }
         <input type="submit" value="Update Settings" class="btn btn-primary"  />
      </form>
   </div>
</div>



